<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typeText"
            android:text="Type"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#D50606"
            android:layout_toEndOf="@+id/img2"
            android:layout_marginStart="10dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/capacityText"
            android:text="Capacity"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="#131313"
            android:layout_toEndOf="@+id/img2"
            android:layout_below="@+id/typeText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationText"
            android:text="Location"
            android:textSize="17sp"
            android:textColor="#2196F3"
            android:layout_toEndOf="@+id/img2"
            android:layout_below="@+id/capacityText"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description1Text"
            android:text="Description"
            android:textSize="13sp"
            android:textColor="#E1EDEC"
            android:layout_toEndOf="@+id/img2"
            android:layout_below="@+id/locationText"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_below="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:id="@+id/btnEdit2"/>

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:id="@+id/btnDelete2"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>